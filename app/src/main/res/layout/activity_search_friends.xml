<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_friends"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mantambakberas.ikamantab.activity.SearchFriendsActivity">

    <include layout="@layout/toolbar_friends"/>



    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linear_wall"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="@drawable/wall"
            android:gravity="center"
            android:layout_height="@dimen/main_size" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:text="@string/connecting_people"
                android:textColor="@android:color/white"
                android:textAlignment="center"
                />

        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/bSearch"
                android:layout_width="wrap_content"
                android:minWidth="250dp"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textColor="#fff"
                android:tint="@android:color/white"
                android:textAlignment="center"
                android:background="@drawable/round_blur"
                android:layout_gravity="center"
                android:letterSpacing="0.025"
                android:padding="12dp"
                android:gravity="center_horizontal|top"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:layout_marginTop="@dimen/button_sign_margin_top" />

            <TextView
                android:paddingTop="10dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:text="@string/alone"
                android:textColor="@color/text_brown"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content" />


        </LinearLayout>

    </LinearLayout>


</LinearLayout>