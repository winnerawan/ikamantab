<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".activity.MainActivity">
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:elevation="5dp"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <include
            android:id="@+id/menuToolbar"
            layout="@layout/toolbar_main"/>

        <LinearLayout
            android:id="@+id/linear_main0"
            android:layout_marginTop="-5dp"
            android:layout_below="@id/menuToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:background="@drawable/wall"
                android:layout_height="@dimen/main_size" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/welcome_message"
                    android:textColor="@android:color/white"
                    android:textAlignment="center"
                    android:layout_marginTop="@dimen/welcome_message_margin_top"
                    />

                <LinearLayout
                    android:clickable="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/main_top"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:background="@drawable/rounded"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_marginStart="40dp"
                        android:layout_marginLeft="40dp"
                        android:layout_gravity="center"
                        android:layout_width="12dp"
                        android:src="@drawable/ic_user_white"
                        android:layout_height="12dp"
                        android:id="@+id/imageView3" />

                    <TextView
                        android:id="@+id/updateProfile"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/update_prof"
                        android:layout_marginRight="30dp"
                        android:textColor="@android:color/white"
                        android:textAlignment="center"
                        android:padding="12dp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:clickable="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/share_margin_top"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:background="@drawable/rounded"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_marginStart="65dp"
                        android:layout_marginLeft="65dp"
                        android:layout_gravity="center"
                        android:layout_width="12dp"
                        android:src="@drawable/ic_share"
                        android:layout_height="14dp" />
                    <TextView
                        android:id="@+id/share"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:text="@string/share"
                        android:layout_marginRight="60dp"
                        android:textColor="@android:color/white"
                        android:textAlignment="center"
                        android:padding="12dp"
                        />
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_main1"
            android:layout_below="@id/linear_main0"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingTop="20dp"
                android:gravity="center_horizontal|center_vertical"
                android:text="@string/mungkinkenal"
                android:textColor="@color/line_grey"
                android:textAlignment="center"
                />

            <LinearLayout
                android:orientation="horizontal"
                android:id="@id/linear_main1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:background="@color/line_grey"/>

        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/re_list_users"
            android:layout_marginBottom="0dp"
            android:layout_below="@id/linear_main1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        </android.support.v7.widget.RecyclerView>


    </RelativeLayout>


    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/background">


            <ImageView
                android:visibility="gone"
                android:id="@+id/backNav"
                android:layout_width="25dp"
                android:layout_height="20dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="40dp"
                android:src="@drawable/back"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00000000"
                android:theme="@style/ThemeOverlay.AppCompat.Dark"
                android:orientation="vertical"
                android:paddingLeft="20dp">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingLeft="30dp"
                    android:background="@drawable/background">

                    <LinearLayout
                        android:id="@+id/linear_main_x"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/nav_header1_height"
                        android:textColor="@android:color/white"
                        android:orientation="vertical"
                        android:gravity="bottom"
                        android:layout_marginTop="@dimen/nav_margin_top"
                        android:paddingBottom="@dimen/nav_pad_bootom"
                        >

                        <ImageView
                            android:id="@+id/foto"
                            android:layout_width="@dimen/nav_photo"
                            android:layout_height="@dimen/nav_photo" />

                        <TextView
                            android:id="@+id/name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Winnerawan T"
                            android:textSize="24sp"
                            android:paddingLeft="16dp"
                            android:paddingTop="@dimen/nav_main_name_pad_top"
                            android:paddingBottom="@dimen/nav_main_name_pad_bottom"
                            android:textColor="@android:color/white"
                            android:letterSpacing="0.025"/>



                        <View
                            android:visibility="gone"
                            android:layout_marginLeft="20dp"
                            android:paddingTop="15dp"
                            android:layout_width="40dp"
                            android:layout_height="3dp"
                            android:textColor="@android:color/white"
                            />



                        <TextView
                            android:id="@+id/email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/nav_header_vertical_spacing"
                            android:textColor="@android:color/white"
                            android:letterSpacing="0.025"/>



                    </LinearLayout>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@android:color/white"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:paddingTop="@dimen/main_separate_header"
                        android:paddingBottom="@dimen/main_separate_header"
                        android:letterSpacing="0.025"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <ImageView
                            android:layout_width="12dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="1dp"
                            android:src="@drawable/ic_beranda"
                            android:layout_height="12dp" />

                        <TextView
                            android:id="@+id/beranda"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="16dp"
                            android:paddingRight="16dp"
                            android:paddingTop="12dp"
                            android:paddingBottom="12dp"
                            android:text="@string/home"
                            android:textColor="@android:color/white"
                            android:letterSpacing="0.025"/>



                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="90dp"
                            android:layout_gravity="center">

                            <TextView
                                android:visibility="gone"
                                android:id="@+id/cart_size"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:textSize="12dp"
                                android:padding="2dp"
                                android:text="0"
                                android:gravity="center"
                                android:background="@drawable/side_nav_bar"
                                android:textColor="@android:color/white"
                                />

                        </LinearLayout>


                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="25dp"
                        android:layout_marginLeft="5dp"
                        android:background="#fff"/>


                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">


                        <ImageView
                            android:layout_width="12dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="1dp"
                            android:src="@drawable/ic_nav_teman"
                            android:layout_height="12dp" />

                        <TextView
                            android:id="@+id/teman"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="16dp"
                            android:paddingRight="16dp"
                            android:paddingTop="12dp"
                            android:paddingBottom="12dp"
                            android:text="@string/teman"
                            android:textColor="@android:color/white"
                            android:letterSpacing="0.025"/>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="25dp"
                        android:layout_marginLeft="5dp"
                        android:background="#fff"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="12dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="1dp"
                            android:src="@drawable/ic_nav_agenda"
                            android:layout_height="12dp" />

                        <TextView
                            android:id="@+id/agenda"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="16dp"
                            android:paddingRight="16dp"
                            android:paddingTop="12dp"
                            android:paddingBottom="12dp"
                            android:text="@string/agenda"
                            android:textColor="@android:color/white"
                            android:letterSpacing="0.025"/>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="25dp"
                        android:layout_marginLeft="5dp"
                        android:background="#fff"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="12dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="1dp"
                            android:src="@drawable/ic_nav_forum"
                            android:layout_height="12dp" />
                        <TextView
                            android:id="@+id/forum"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="16dp"
                            android:paddingRight="16dp"
                            android:paddingTop="12dp"
                            android:paddingBottom="12dp"
                            android:text="@string/forum"
                            android:textColor="@android:color/white"
                            android:letterSpacing="0.025"/>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="25dp"
                        android:layout_marginLeft="5dp"
                        android:background="#fff"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="12dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="1dp"
                            android:src="@drawable/ic_nav_publikasi"
                            android:layout_height="12dp" />


                        <TextView
                            android:id="@+id/publikasi"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="16dp"
                            android:paddingRight="16dp"
                            android:paddingTop="12dp"
                            android:paddingBottom="12dp"
                            android:text="@string/publikasi"
                            android:textColor="@android:color/white"
                            android:letterSpacing="0.025"/>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="25dp"
                        android:layout_marginLeft="5dp"
                        android:background="#fff"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">


                        <ImageView
                            android:layout_width="12dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="1dp"
                            android:src="@drawable/ic_nav_iamantarab"
                            android:layout_height="12dp" />
                        <TextView
                            android:id="@+id/iamantarab"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="16dp"
                            android:paddingRight="16dp"
                            android:paddingTop="12dp"
                            android:paddingBottom="12dp"
                            android:text="@string/iamantarab"
                            android:textColor="@android:color/black"
                            android:letterSpacing="0.025"/>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="25dp"
                        android:layout_marginLeft="5dp"
                        android:background="#fff"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="12dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="1dp"
                            android:src="@drawable/ic_nav_pengaturan"
                            android:layout_height="12dp" />
                        <TextView
                            android:id="@+id/pengaturan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="16dp"
                            android:paddingRight="16dp"
                            android:paddingTop="12dp"
                            android:paddingBottom="12dp"
                            android:text="@string/pengaturan"
                            android:textColor="@android:color/white"
                            android:letterSpacing="0.025"/>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="25dp"
                        android:layout_marginLeft="5dp"
                        android:background="#fff"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="12dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="1dp"
                            android:src="@drawable/ic_nav_keluar"
                            android:layout_height="12dp" />

                        <TextView
                            android:id="@+id/logout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="16dp"
                            android:paddingRight="16dp"
                            android:paddingTop="12dp"
                            android:paddingBottom="12dp"
                            android:text="@string/logout"
                            android:textColor="@android:color/white"
                            android:letterSpacing="0.025"/>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="25dp"
                        android:layout_marginLeft="5dp"
                        android:background="#fff"/>


                </LinearLayout>
            </LinearLayout>
        </FrameLayout>
    </android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>
</android.support.design.widget.CoordinatorLayout>